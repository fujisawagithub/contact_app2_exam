<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
<tr>
  <th>タイトル</th>
  <th>内容</th>
</tr>
<% @contacts.each do |contact| %>
<tr>
<td><%= contact.title %></td>
<td><%= contact.content %></td>
<td><%= link_to '詳細を確認する', contact_path(contact.id)%></td>
<td><%= link_to "編集する", edit_contact_path(contact.id) %></td>
<td><%= link_to '削除する', contact_path(contact.id), 
        method: :delete, data:{confirm: '本当にok?'} %></td>
</tr>
<% end %>
</table>
<br>
<%= link_to '新しくブログを投稿する', new_contact_path %>